<div class="bg">
  <h2 class="text-center mx-auto pt-5 pb-3">会員情報編集</h2>
  <hr>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container px-5">
  <%= form_for(@user) do |f| %>
    <div class="account-item">
      <div class="field mt-3">
        <label for="name">名前</label><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "pl-2", id: "name" %>
      </div>
    </div>
    <div class="account-item">
      <div class="field mt-3">
        <label for="password">パスワード</label><br />
        <%= f.password_field :password, placeholder: "パスワード", class: "pl-2", id: "password" %>
        <%= f.password_field :password_confirmation, placeholder:"パスワード再入力", class: "pl-2" %>
      </div>
    </div>
    <div class="account-item">
      <div class="actions">
        <div class="mx-auto text-center">
          <%= f.submit "更新", class: "btn btn-primary col-6 mt-4 py-3" %>
          <br>
          <%= link_to "退会",user_path, method: :delete,"data-confirm" => "本当に退会しますか？", class: "btn btn-danger col-6 my-2 py-3" %>
        </div>
      </div>
    </div>
  <% end %>
  </div><!-- container -->

</div>