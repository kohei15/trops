<h2 class="text-center mx-auto pt-5 pb-3">会員登録</h2>
<hr>

<div class="container px-5">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="account-item">
    <div class="field mt-3">
      <label for="name">名前<span class="required">※必須</span></label><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "pl-2", id: "name" %>
    </div>
  </div>

  <div class="account-item">
    <div class="field mt-4">
      <label for="email">メールアドレス<span class="required">※必須</span></label><br>
      <%= f.email_field :email, placeholder: "（例）XXX@XXX.com", class: "pl-2", id: "email" %>
    </div>
  </div>

  <div class="account-item">
    <div class="field mt-4">
      <label for="password">パスワード</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><span class="required">※必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "pl-2", id: "password" %>
    </div>
    <div class="field mt-4">
      <label for="password_confirmation">確認用パスワード<span class="required">※必須</span></label><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード", class: "pl-2", id: "password_confirmation" %>
    </div>
  </div>

  <div class="account-item">
    <div class="actions">
      <div class="mx-auto text-center">
        <%= f.submit "会員登録", class: "btn btn-primary col-6 my-4 py-3" %>
      </div>
    </div>
  <% end %>
  </div>

<p class="text-right">アカウントをお持ちの方は<%= render "devise/shared/links" %></p>
</div>